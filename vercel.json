{
  "version": 2,
  "builds": [
    {
      "src": "src/api.py",
      "use": "@vercel/python"
    },
    {
      "src": "src/frontend/project/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "src/api.py"
    },
    {
      "src": "/(.*)",
      "dest": "src/frontend/project/dist/$1"
    }
  ]
}
